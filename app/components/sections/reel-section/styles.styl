&
  overflow: hidden
  // height: 100vh
  font-family: "Gilroy", sans-serif
  // lost-align: vertical
  position: relative
  font-weight: 700
  font-size: 5em
  +below(1400px)
    font-size: 4em
  +below(1200px)
    font-size: 3.5em
  +below(1000px)
    font-size: 3em
  +below(800px)
    font-size: 2.2em
  +below(600px)
    font-size: 1.7em
  +below(500px)
    font-size: 1.4em

.copy
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  color: dope-grey
  text-transform: uppercase

  .container
    color: white
    width: 60%
    right: 15%
    +below(500px)
      width: 80%
      right: 10%

.dot
  color: dope-pink

.video-container
  position: relative

.EmberYoutube                /* give fit to box an aspect ratio */
  display: inline-block /* let it be styled thusly */
  padding: 0            /* get rid of pre-styling */
  margin: 0
  width: 100%           /* take up full width available */
  padding-top: 56.25%   /* give aspect ratio of 16:9 "720 / 1280 = 0.5625" */
  height: 0px           /* don't want it to expand beyond padding */
  position: relative    /* allow for absolute positioning of child elements */

.EmberYoutube > iframe
  position: absolute    /* expand to fill */
  top: 0px
  left: 0px
  right: 0px
  bottom: 0px
  width: 100%
  height: 100%
  z-index: -2


.shadow
  position: absolute    /* expand to fill */
  top: 0px
  left: 0px
  right: 0px
  bottom: 0px
  width: 100%
  height: 100%
  background: black
  opacity: 0.5
  z-index: -1
