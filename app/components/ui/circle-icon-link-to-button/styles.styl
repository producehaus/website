a
  cursor: pointer
  border: 3px solid
  background: none
  border-radius: 50%
  width: 1.2em
  height: 1.2em
  display: flex
  justify-content: center
  align-items: center
  box-sizing: border-box
  transition: background, 0.25s
  i
    pointer-events: none
    transition: color, 0.25s
    display: flex
    font-size: 0.5em
    justify-content: center
    align-items: center

a:hover
  text-decoration: none
  background: black
  i
    color: white
