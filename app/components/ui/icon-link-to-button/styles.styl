a
  cursor: pointer
  background: none
  width: 1.2em
  height: 1.2em
  display: flex
  justify-content: center
  align-items: center
  box-sizing: border-box
  transition: background, 0.25s
  i
    pointer-events: none
    transition: color, 0.25s
    display: flex
    font-size: 1em
    justify-content: center
    align-items: center

a:hover
  text-decoration: none
