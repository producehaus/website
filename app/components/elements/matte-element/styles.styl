&
  position: fixed;
  top: 0
  right: 0
  bottom: 0
  left: 0
  border: 0 solid white
  transition: border-width, 0.5s
  +above(700px)
    border: large-view-site-border solid white
    animation-timing-function: ease-in-out;
    animation-duration: 0.5s;
    animation-name: grow;

@keyframes grow {
  0% {
    border-width: 0;
  }
  60% {
    border-width: 0;
  }
  100% {
    border-width: large-view-site-border;
  }
}
