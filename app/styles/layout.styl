.main-container
  height: 100vh

.wrapper
  margin: large-view-site-border
  +below(min-width-for-matte)
    margin: 0

.center
  align-items: center
  justify-content: center

.vcenter
  justify-content: center

.hcenter
  align-items: center

.right
  align-items: flex-end

.bottom
  align-items: flex-end

.stretch
  width: 100%
  height: 100%

.space-between
  justify-content: space-between

.row
  display: flex

.col
  display: flex
  flex-direction: column

for num in (1..9)
  .col-{num}
    @extend .col
    flex: num

.only-mobile
  display: none
  +below(min-width-for-matte)
    display:inline-flex

.hide-mobile
  display: inline-flex
  +below(min-width-for-matte)
    display: none
